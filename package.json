{
  "name": "@reedchan/koa-proxy",
  "description": "Http Proxy Middleware for Koa",
  "version": "0.13.1",
  "keywords": [
    "koa",
    "middleware",
    "proxy",
    "http-proxy"
  ],
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=lcov --reporter=html && codecov -f .nyc_output/*.json",
    "ci": "pnpm run test && pnpm run coverage",
    "lint": "eslint index.js test/",
    "version": "standard-version",
    "pub": "pnpm run version && pnpm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reedchan7/koa-proxy.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "author": "reedchan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reedchan7/koa-proxy/issues"
  },
  "homepage": "https://github.com/reedchan7/koa-proxy#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": "pnpm run lint"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/koa": "^2.15.0",
    "chai": "^5.2.0",
    "chai-http": "^5.1.2",
    "codecov": "^3.8.3",
    "eslint": "^9.27.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-mocha": "^11.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^9.1.7",
    "koa": "^2.16.1",
    "lint-staged": "^16.0.0",
    "mocha": "^11.4.0",
    "nyc": "^17.1.0",
    "sinon": "^20.0.0",
    "sinon-chai": "^4.0.0",
    "standard-version": "^9.5.0"
  },
  "dependencies": {
    "http-proxy": "^1.18.1",
    "path-match": "^1.2.4",
    "uuid": "^11.1.0"
  },
  "peerDependencies": {
    "@types/koa": "^2.0.0",
    "koa": "^2.0.0"
  }
}
